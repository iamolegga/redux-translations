{
  "name": "redux-translations",
  "version": "0.0.0-development",
  "description": "translations utils for react-redux apps",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "commit": "git-cz",
    "prettify": "prettier --single-quote --trailing-comma es5 --parser typescript --write \"@(src|__tests__)/**/*.ts?(x)\"",
    "build": "tsc -p ./tsconfig.json",
    "postpublish": "cat ./coverage/lcov.info | codecov",
    "_semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamolegga/redux-translations.git"
  },
  "keywords": [
    "react",
    "redux",
    "translations"
  ],
  "author": "Oleg Repin <iamolegga@gmail.com> (http://github.com/iamolegga)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamolegga/redux-translations/issues"
  },
  "homepage": "https://github.com/iamolegga/redux-translations#readme",
  "devDependencies": {
    "@types/enzyme": "^2.8.1",
    "@types/jest": "^20.0.2",
    "@types/node": "^8.0.7",
    "@types/react": "^15.0.34",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.45",
    "@types/redux": "^3.6.31",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^2.9.1",
    "ghooks": "^2.0.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-test-renderer": "^15.6.1",
    "redux": "^3.7.1",
    "semantic-release": "^6.3.6",
    "ts-jest": "^20.0.6",
    "typescript": "^2.4.1"
  },
  "peerDependencies": {
    "react": "^15.6.1",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.ts?(x)",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec|snapshot))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run prettify && npm t"
    }
  }
}
