{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "lib": ["dom", "es5", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitUseStrict": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "__tests__/**/*"
  ]
}